{
	"compilerOptions": {
		"target": "es5",
		"lib": [ "es2015", "dom" ],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"resources/assets/**/*"
	]
}
